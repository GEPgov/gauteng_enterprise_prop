@page
@model Gauteng_Enterprise_Propeller.Pages.PublicNotices.VacanciesModel
@{
    ViewData["Title"] = "Career Opportunities";
}

<div class="page-header bg-primary text-white py-5">
    <div class="container">
        <h1 class="display-4">Career Opportunities</h1>
        <p class="lead">Join our team and make a difference in Gauteng's economic development</p>
    </div>
</div>

<div class="container py-5">
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        <strong>How to Apply:</strong> Submit your CV and cover letter to <a href="mailto:careers@gep.co.za">careers@gep.co.za</a>
        with the position reference number in the subject line.
    </div>

    <!-- Current Vacancies -->
    <h3 class="text-primary mb-4">Current Vacancies</h3>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h4 class="card-title text-primary">Senior Business Development Officer</h4>
                    <p class="text-muted mb-2">
                        <i class="fas fa-map-marker-alt me-2"></i>Johannesburg, Gauteng
                        <span class="mx-2">|</span>
                        <i class="fas fa-briefcase me-2"></i>Full-time
                        <span class="mx-2">|</span>
                        <i class="fas fa-clock me-2"></i>Permanent
                    </p>
                </div>
                <span class="badge bg-success">NEW</span>
            </div>

            <p class="card-text">
                We are seeking an experienced Business Development Officer to support SMMEs in their growth journey.
                The ideal candidate will have 5+ years experience in business development, SMME support, or related field.
            </p>

            <h6 class="mt-3">Key Requirements:</h6>
            <ul>
                <li>Bachelor's degree in Business Administration or related field</li>
                <li>Minimum 5 years experience in business development</li>
                <li>Strong understanding of SMME sector in South Africa</li>
                <li>Excellent communication and interpersonal skills</li>
            </ul>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <strong>Reference:</strong> GEP/HR/2025/BDO/001<br>
                    <strong>Closing Date:</strong> November 30, 2025
                </div>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-file-download me-1"></i>Download Job Description
                </a>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h4 class="card-title text-primary">Financial Analyst</h4>
                    <p class="text-muted mb-2">
                        <i class="fas fa-map-marker-alt me-2"></i>Pretoria, Gauteng
                        <span class="mx-2">|</span>
                        <i class="fas fa-briefcase me-2"></i>Full-time
                        <span class="mx-2">|</span>
                        <i class="fas fa-clock me-2"></i>Permanent
                    </p>
                </div>
                <span class="badge bg-primary">URGENT</span>
            </div>

            <p class="card-text">
                Join our finance team to evaluate funding applications and conduct financial due diligence on SMME applications.
            </p>

            <h6 class="mt-3">Key Requirements:</h6>
            <ul>
                <li>BCom/BBusSc in Finance, Accounting or related field</li>
                <li>3+ years experience in financial analysis</li>
                <li>Strong Excel and financial modeling skills</li>
                <li>CA(SA), CIMA, or similar qualification advantageous</li>
            </ul>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <strong>Reference:</strong> GEP/HR/2025/FA/003<br>
                    <strong>Closing Date:</strong> November 15, 2025
                </div>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-file-download me-1"></i>Download Job Description
                </a>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h4 class="card-title text-primary">Training and Development Coordinator</h4>
                    <p class="text-muted mb-2">
                        <i class="fas fa-map-marker-alt me-2"></i>Midrand, Gauteng
                        <span class="mx-2">|</span>
                        <i class="fas fa-briefcase me-2"></i>Full-time
                        <span class="mx-2">|</span>
                        <i class="fas fa-clock me-2"></i>2-Year Contract
                    </p>
                </div>
            </div>

            <p class="card-text">
                Coordinate and deliver training programs for entrepreneurs and small business owners across Gauteng.
            </p>

            <h6 class="mt-3">Key Requirements:</h6>
            <ul>
                <li>Degree in Education, Training Management or related field</li>
                <li>Experience in adult education and training</li>
                <li>Facilitation and presentation skills</li>
                <li>Valid driver's license</li>
            </ul>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <strong>Reference:</strong> GEP/HR/2025/TDC/002<br>
                    <strong>Closing Date:</strong> October 31, 2025
                </div>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-file-download me-1"></i>Download Job Description
                </a>
            </div>
        </div>
    </div>

    <!-- Internship Programs -->
    <h3 class="text-primary mb-4 mt-5">Internship & Graduate Programs</h3>
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Graduate Internship Programme 2025</h5>
            <p class="card-text">
                GEP offers a 12-month internship program for recent graduates in various fields including
                Business Administration, Finance, Economics, and more. Gain valuable experience while making
                a difference in the lives of entrepreneurs.
            </p>
            <p><strong>Next Intake:</strong> January 2026</p>
            <a href="#" class="btn btn-outline-primary">Learn More</a>
        </div>
    </div>
</div>
