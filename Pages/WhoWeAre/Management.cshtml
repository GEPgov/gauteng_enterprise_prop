    <!-- Call to Action -->
    <div class="text-center mt-5">
        <h4 class="mb-3">Work With Us</h4>
        <p class="lead text-muted mb-4">Interested in partnering with GEP or learning more about our programs?</p>
        <a href="/contact" class="btn btn-primary btn-lg me-2"><i class="fas fa-phone me-2"></i>Contact Us</a>
        <a href="/services" class="btn btn-outline-primary btn-lg"><i class="fas fa-info-circle me-2"></i>Our Services</a>
    </div>
</div>