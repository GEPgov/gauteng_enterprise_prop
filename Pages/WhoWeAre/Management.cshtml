@page
@model Gauteng_Enterprise_Propeller.Pages.WhoWeAre.ManagementModel
@{
    ViewData["Title"] = "Management Team";
}

<div class="page-header bg-primary text-white py-5">
    <div class="container">
        <h1 class="display-4">Management Team</h1>
        <p class="lead">Meet the executive leadership driving GEP's operations and strategic initiatives</p>
    </div>
</div>

<div class="container py-5">
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Our management team brings together diverse expertise to deliver excellence in supporting Gauteng's entrepreneurs.
    </div>

    <div class="row">
        <!-- Mr Saki Zamxaka - CEO -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="~/images/Management/Web_Profile_Saki_Zamxaka_Mr_Saki_Zamxaka_Chief_Executive _Officer 2025.png" alt="Mr Saki Zamxaka" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h5 class="card-title">Mr Saki Zamxaka</h5>
                    <p class="text-primary fw-bold mb-2">Chief Executive Officer</p>
                    <p class="card-text small text-muted">
                        Leading GEP's strategic vision and operational excellence in supporting SMMEs across Gauteng.
                    </p>
                </div>
            </div>
        </div>

        <!-- Mr Tinevimbo Gondo - Acting CFO -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="~/images/Management/Web Profile_Mr_Tinevimbo_Gondo_ Acting Chief Financial Officer 2025.png" alt="Mr Tinevimbo Gondo" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h5 class="card-title">Mr Tinevimbo Gondo</h5>
                    <p class="text-success fw-bold mb-2">Acting Chief Financial Officer</p>
                    <p class="card-text small text-muted">
                        Overseeing financial management, ensuring fiscal responsibility and sustainable financial operations.
                    </p>
                </div>
            </div>
        </div>

        <!-- Mr Richard Manzini - Acting COO -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="~/images/Management/Web_Profile_Mr Richard_Manzini_Acting_Chief_Operations_Office 2025.png" alt="Mr. Richard Manzini" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h5 class="card-title">Mr. Richard Manzini</h5>
                    <p class="text-info fw-bold mb-2">Acting Chief Operations Officer</p>
                    <p class="card-text small text-muted">
                        Managing day-to-day operations and ensuring efficient delivery of GEP's programs and services.
                    </p>
                </div>
            </div>
        </div>

        <!-- Mr. Collin Pitso - GM Corporate Support -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="~/images/Management/Web Profile_Mr_Collin_Pitso_General_Manager_Corporate_Support_and_Administration 2025.png" alt="Mr. Collin Pitso" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h5 class="card-title">Mr. Collin Pitso</h5>
                    <p class="text-warning fw-bold mb-2">General Manager: Corporate Support and Administration</p>
                    <p class="card-text small text-muted">
                        Leading corporate services, facilities management, and administrative functions.
                    </p>
                </div>
            </div>
        </div>

        <!-- Mrs Nosipho Khonkwane - GM Strategy -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="~/images/Management/Web_Profile_Mrs_Nosipho_Khonkwane_General_Manager_Strategy,_Monitoring_&_Evaluation_2025.png" alt="Mrs Nosipho Khonkwane" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h5 class="card-title">Mrs Nosipho Khonkwane</h5>
                    <p class="text-danger fw-bold mb-2">General Manager: Strategy, Monitoring & Evaluation</p>
                    <p class="card-text small text-muted">
                        Driving strategic planning, performance monitoring, and impact evaluation across GEP initiatives.
                    </p>
                </div>
            </div>
        </div>

        <!-- Ms Sibusisiwe Ntuli - GM Risk and Audit -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="~/images/Management/Web Profile_Ms_Sibusisiwe_Ntuli_General_Manager_Risk_and_Audit_Management 2025.png" alt="Ms Sibusisiwe Ntuli" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h5 class="card-title">Ms Sibusisiwe Ntuli</h5>
                    <p class="text-secondary fw-bold mb-2">General Manager: Risk and Audit Management</p>
                    <p class="card-text small text-muted">
                        Ensuring robust risk management, internal controls, and audit compliance frameworks.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Focus Areas -->
    <div class="card border-0 shadow-sm mt-5">
        <div class="card-body">
            <h4 class="text-primary mb-4"><i class="fas fa-bullseye me-2"></i>Management Focus Areas</h4>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-chart-line text-primary fa-2x me-3"></i>
                        <div>
                            <h6 class="mb-2">Strategic Leadership</h6>
                            <p class="small text-muted mb-0">Guiding GEP's vision and ensuring alignment with provincial economic development goals.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-cogs text-success fa-2x me-3"></i>
                        <div>
                            <h6 class="mb-2">Operational Excellence</h6>
                            <p class="small text-muted mb-0">Delivering efficient and effective programs and services to support SMMEs.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-shield-alt text-info fa-2x me-3"></i>
                        <div>
                            <h6 class="mb-2">Governance & Compliance</h6>
                            <p class="small text-muted mb-0">Maintaining the highest standards of governance, risk management, and regulatory compliance.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-handshake text-warning fa-2x me-3"></i>
                        <div>
                            <h6 class="mb-2">Stakeholder Engagement</h6>
                            <p class="small text-muted mb-0">Building strategic partnerships and collaborations for greater impact.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-users text-danger fa-2x me-3"></i>
                        <div>
                            <h6 class="mb-2">People Development</h6>
                            <p class="small text-muted mb-0">Fostering a high-performance culture and investing in employee growth.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-lightbulb text-secondary fa-2x me-3"></i>
                        <div>
                            <h6 class="mb-2">Innovation</h6>
                            <p class="small text-muted mb-0">Embracing innovative solutions and approaches to entrepreneurship development.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
