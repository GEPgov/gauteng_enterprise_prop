@page
@model Gauteng_Enterprise_Propeller.Pages.WhoWeAre.AboutModel
@{
    ViewData["Title"] = "About Us";
}

<div class="page-header bg-primary text-white py-5">
    <div class="container">
        <h1 class="display-4">About Us</h1>
        <p class="lead">Our strategic approach to empowering Gauteng entrepreneurs</p>
    </div>
</div>

<div class="container py-5">
    <!-- Introduction Section -->
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-body text-center py-5">
            <h2 class="mb-4">Our Objectives</h2>
            <p class="lead text-muted">Seven Strategic Priorities towards fulfilling GEP's role, achieving our goals and delivering on our mandate</p>
        </div>
    </div>

    <!-- Strategic Priorities -->
    <div class="row">
        <!-- Strategic Lead -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-compass me-2"></i>Strategic Lead</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Strategically lead, monitor and evaluate GEP's policies, programmes and projects.</p>
                </div>
            </div>
        </div>

        <!-- Timeous -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-clock me-2"></i>Timeous</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Plan and implement timeously all GEP's policies, programmes and projects.</p>
                </div>
            </div>
        </div>

        <!-- Compliance -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Compliance</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Ensure prudent, compliant and efficient financial, accounting and supply chain services.</p>
                </div>
            </div>
        </div>

        <!-- Marketing -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-bullhorn me-2"></i>Marketing</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Create awareness of GEP's services and products through comprehensive marketing and communication.</p>
                </div>
            </div>
        </div>

        <!-- Management -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-cogs me-2"></i>Management</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Efficiently and effectively manage GEP's information communication technology and general facilities services.</p>
                </div>
            </div>
        </div>

        <!-- Legal Services -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0"><i class="fas fa-balance-scale me-2"></i>Legal Services</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Provide sound legal, governance, risk and compliance services.</p>
                </div>
            </div>
        </div>

        <!-- Corporate Services -->
        <div class="col-lg-12 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0"><i class="fas fa-building me-2"></i>Corporate Services</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Deliver efficient and effective corporate services.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="card border-0 shadow-sm mt-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="card-body text-center text-white py-5">
            <h3 class="mb-3">Together We Propel Gauteng Forward</h3>
            <p class="lead mb-4">Through strategic leadership and comprehensive support, we're committed to transforming the entrepreneurial landscape of Gauteng Province.</p>
            <a href="#" class="btn btn-light btn-lg">Learn More About Our Services</a>
        </div>
    </div>
</div>